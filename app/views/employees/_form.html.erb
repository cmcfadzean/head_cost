<%= form_with(model: employee, local: true) do |form| %>
  <%= component "bar", cancel: employees_path, title: "Employee" do %>
    <%= form.submit %>
  <% end %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= component "container" do %><br>
    <%= component "panel", title: "Details", size: "lg" do %>
      <div class="row">
        <div class="one-half column">
          <div class="field">
            <%= form.label :name %>
            <%= form.text_field :name, class: "u-full-width" %>
          </div><br>
          <div class="field">
            <%= form.label :title %>
            <%= form.text_field :title, class: "u-full-width" %>
          </div><br>
          <div class="field">
            <%= form.label :department_id %><br>
            <%= form.collection_select :department_id, current_user.departments,:id,:title, include_blank: true %>
          </div>
        </div>
        <div class="one-half column">
        
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>

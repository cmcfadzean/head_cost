<!DOCTYPE html>
<html>
  <head>
    <title>HeadCost</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.lineicons.com/2.0/LineIcons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= component "header" do %>
      <%= component "nav" do %>
        <%= link_to 'Staff', employees_path, class: "system-nav__link #{current_class?(employees_path)} #{current_class?('/')}" %>
        <%= link_to 'Departments', departments_path, class: "system-nav__link #{current_class?(departments_path)}" %>
      <% end %>
    <% end %>
    <%= yield %>
    <%= component "footer" %>
    <%= component "alert", id: "notice", message: notice %>
    <%= component "alert", id: "alert", message: alert %>
  </body>
</html>
